# HyperBox Editor Configuration
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Shell scripts
[*.{sh,bash}]
indent_size = 2
shell_variant = bash

# PowerShell scripts
[*.{ps1,psm1}]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4

# Git config files
[.git*]
indent_size = 4

# HTML/CSS
[*.{html,css,scss}]
indent_size = 2

# Configuration files
[{Cargo.toml,package.json,tsconfig.json}]
indent_size = 2
